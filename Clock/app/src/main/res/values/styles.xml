<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppTheme.Tab" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppTheme.Time" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Meridiem" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Large.AppTheme.PlaceName" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Medium.AppTheme.PlaceName" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Small.AppTheme.PlaceName" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.AppTheme.TimeDifference" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorOnTimeDifference</item>
    </style>

    <style name="TextAppearance.AppTheme.AlarmInfo" parent="TextAppearance.AppCompat.Medium">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>


</resources>
